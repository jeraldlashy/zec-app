<%- include('partials/head') %>
  <!-- Insert Something Here-->
  <div class="row">
  <div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
      <div class="card-body">
        <h4 class="card-title">Listing of Reports</h4>
        <p class="card-description"> All recorded reports
        </p>
        <table class="table table-bordered">
          <thead>
            <tr>
              <th> Title </th>
              <th> Issue </th>
              <th> Location </th>
              <th> Description </th>
              <th> Reported By </th>
              <th> dateReported </th>
            </tr>
          </thead>
          <tbody>
            <% reportings.map((report)=> { %>
              <% const date=(report.dateReported).toUTCString();%>
                <tr >
                  <td>
                    <a href="/reportings/<%=report._id%>"> <%= report.title %> </a>
                  </td>
                  <td>
                    <%= report.issue.title %>
                  </td>
                  <td>
                    <%= report.location.name %>
                  </td>
                  <td>
                    <%= report.description%>
                  </td>
                  <td>
                    <%= report.name %>
                  </td>
                  <td>
                    <%= (report.dateReported).toLocaleDateString('en-US'); %>
                  </td>
                </tr>
                <% }); %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <%- include('forms/reporting') %>

</div>

<%- include('partials/tail') %>